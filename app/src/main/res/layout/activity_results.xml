<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:patternview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBalck"
    tools:context=".activities.ResultsActivity">


    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="SCORE"
        android:textColor="@color/colorYellow"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textsolcount"
        android:layout_alignStart="@+id/textsolcount" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text=""
        android:textColor="@color/colorYellow"
        android:layout_alignBaseline="@+id/textScore"
        android:layout_alignBottom="@+id/textScore"
        android:layout_alignRight="@+id/menu"
        android:layout_alignEnd="@+id/menu" />

    <TextView
        android:id="@+id/textsolcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textScore"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="63dp"
        android:textColor="@color/colorYellow"
        android:text="FOUND SOLUTIONS" />

    <TextView
        android:id="@+id/solcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textsolcount"
        android:layout_alignLeft="@+id/score"
        android:layout_alignStart="@+id/score"
        android:textColor="@color/colorYellow"
        android:text="" />

    <TextView
        android:id="@+id/textRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:layout_centerVertical="true"
        android:textColor="@color/colorYellow"
        android:layout_alignLeft="@+id/textsolcount"
        android:layout_alignStart="@+id/textsolcount" />

    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textRecord"
        android:layout_alignBottom="@+id/textRecord"
        android:layout_alignLeft="@+id/solcount"
        android:layout_alignStart="@+id/solcount"
        android:textColor="@color/colorYellow"
        android:text="" />

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:text="TRY AGAIN"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <Button
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:layout_alignBaseline="@+id/restart"
        android:layout_alignBottom="@+id/restart"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/nextLevelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/menu"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/score"
        android:layout_toRightOf="@+id/score"
        android:text="NEXT LEVEL" />
</RelativeLayout>
