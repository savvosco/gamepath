<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PatternView">
        <!-- This is the size the circle. -->
        <attr name="circleSize" format="dimension" />
        <!-- Number of rows in the matrix. -->
        <attr name="gridRows" format="integer" />
        <!-- Number of columns in the matrix. -->
        <attr name="gridColumns" format="integer" />
        <!-- The color of the path between the cells. -->
        <attr name="pathColor" format="color" />
        <!-- The color of the circle. -->
        <attr name="circleColor" format="color" />
        <!-- The color of the dot. -->
        <attr name="dotColor" format="color" />
    </declare-styleable>

</resources>